            contentTypeIdentifier="de.walware.statet.rtm.contentTypes.GGPlot"
            class="org.eclipse.emf.ecore.xmi.impl.XMIResourceFactoryImpl"/>
   </extension>

   <extension point="org.eclipse.emf.edit.itemProviderAdapterFactories">
